<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fazenda_urbana">

    <LinearLayout
        android:id="@+id/layoutCarrinho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Produto 1 -->
                <LinearLayout
                    android:id="@+id/itemProduto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bordas"
                    android:padding="16dp"
                    android:elevation="4dp">

                    <ImageView
                        android:id="@+id/imagemProduto1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_placeholder"
                        android:background="@drawable/bordas"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomeProduto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/quantidadeProduto1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <Button
                                android:id="@+id/botaoDecrementarProduto1"
                                android:layout_width="55dp"
                                android:layout_height="48dp"
                                android:backgroundTint="@color/button_decrement"
                                android:text="-" />

                            <Button
                                android:id="@+id/botaoIncrementarProduto1"
                                android:layout_width="55dp"
                                android:layout_height="48dp"
                                android:backgroundTint="@color/button_increment"
                                android:text="+" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/precoProduto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="-"
                            android:textSize="14sp"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/botaoRemover1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remover"
                    android:layout_gravity="end"
                    android:backgroundTint="@color/button_remove"
                    android:layout_marginBottom="16dp" />

                <!-- Produto 2 -->
