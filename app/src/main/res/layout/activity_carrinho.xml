<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutCarrinho"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/lifegreen"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Produto 1 -->
                <LinearLayout
                    android:id="@+id/itemProduto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imagemProduto1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_placeholder"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomeProduto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantidadeProduto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <TextView
                            android:id="@+id/precoProduto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/botaoRemover1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remover" />

                <!-- Produto 2 -->
                <LinearLayout
                    android:id="@+id/itemProduto2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imagemProduto2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_placeholder"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomeProduto2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantidadeProduto2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <TextView
                            android:id="@+id/precoProduto2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/botaoRemover2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remover" />

                <!-- Produto 3 -->
                <LinearLayout
                    android:id="@+id/itemProduto3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/imagemProduto3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_placeholder"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomeProduto3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantidadeProduto3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <TextView
                            android:id="@+id/precoProduto3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/botaoRemover3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remover" />

                <!-- Produto 4 -->
                <LinearLayout
                    android:id="@+id/itemProduto4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@android:color/darker_gray">

                    <ImageView
                        android:id="@+id/imagemProduto4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_placeholder"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nomeProduto4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/quantidadeProduto4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />

                        <TextView
                            android:id="@+id/precoProduto4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/botaoRemover4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remover" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/totalPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total: R$ 0.00"
                android:textSize="18sp"
                android:gravity="left"
                android:textStyle="bold"
                android:background="@drawable/rounded_edittext"
                android:layout_marginBottom="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/botaoEditarPedido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Editar Pedido" />

                <View
                    android:layout_width="16dp"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/botaoFinalizarPedido"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Finalizar Pedido" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
