<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_fazenda"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="-76dp"
        tools:layout_editor_absoluteY="-200dp">

        <!-- Texto Life Green no topo -->

        <!-- Campo CPF -->

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="411dp"
            android:layout_height="286dp"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/txtCpf"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bordas"
            android:hint="CPF"
            android:inputType="number"
            android:maxLength="11" />

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="26dp"
            android:background="@drawable/bordas"
            android:hint="Senha"
            android:inputType="textPassword" />

        <!-- Botão Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#006400"
            android:text="Login" />

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnRealizarCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#26B1EF"
            android:text="Realizar Cadastro" />

        <!-- Botão Esqueci Minha Senha -->
        <Button
            android:id="@+id/btnEsqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#A22600"
            android:text="Esqueci minha senha" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
