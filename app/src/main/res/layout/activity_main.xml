<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/lifegreen"
        android:padding="16dp"
        android:gravity="center">

        <!-- Texto Life Green no topo -->
        <TextView
            android:id="@+id/txtLifeGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Life Green"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="#BA000000"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/robotoblackitalic" />

        <!-- Campo CPF -->
        <EditText
            android:id="@+id/txtCpf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="CPF"
            android:inputType="number"
            android:background="@drawable/bordas"
            android:maxLength="11"
            android:layout_marginBottom="16dp" />

        <!-- Campo Senha -->
        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Senha"
            android:background="@drawable/bordas"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp" />

        <!-- Botão Login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:background="@drawable/button_style"
            android:layout_marginBottom="8dp" />

        <!-- Botão Cadastrar -->
        <Button
            android:id="@+id/btnRealizarCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizar Cadastro"
            android:background="@drawable/button_style"
            android:layout_marginBottom="8dp" />

        <!-- Botão Esqueci Minha Senha -->
        <Button
            android:id="@+id/btnEsqueciSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:text="Esqueci minha senha" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
