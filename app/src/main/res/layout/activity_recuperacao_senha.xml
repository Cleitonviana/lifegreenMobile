<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecuperacaoSenha">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo CPF com botão "Enviar Código" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtCpf"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Digite seu CPF"
                android:inputType="number"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnEnviarCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enviar Código" />
        </LinearLayout>

        <!-- Espaçamento -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Campo para inserir o código -->
        <EditText
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Digite o código recebido"
            android:inputType="number"
            android:padding="10dp" />

        <!-- Espaçamento -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Campo para a nova senha -->
        <EditText
            android:id="@+id/txtNovaSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Digite a nova senha"
            android:inputType="textPassword"
            android:padding="10dp" />

        <!-- Espaçamento -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Botões "Alterar Senha" e "Voltar ao Início" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAlterarSenha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alterar Senha" />

            <View
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnVoltarInicio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voltar ao Início" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>